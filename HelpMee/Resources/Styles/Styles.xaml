<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Schriftart: Inter -->
    <Style TargetType="Label">
        <Setter Property="FontFamily" Value="Inter" />
        <Setter Property="TextColor" Value="{StaticResource TextColor}" />
    </Style>

    <Style TargetType="Button">
        <Setter Property="FontFamily" Value="Inter" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="BackgroundColor" Value="{StaticResource PrimaryGreen}" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="10,5" />
    </Style>

    <Style TargetType="Entry">
        <Setter Property="FontFamily" Value="Inter" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="TextColor" Value="{StaticResource TextColor}" />
        <Setter Property="BackgroundColor" Value="{StaticResource SecondaryLightGray}" />
    </Style>

    <Style TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{StaticResource SecondaryWhite}" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="BorderColor" Value="{StaticResource SecondaryGray}" />
        <Setter Property="Padding" Value="10" />
    </Style>
</ResourceDictionary>
